{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6",
         "es2017",
         "esnext.asynciterable"
      ],
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "strictFunctionTypes": true,
      "baseUrl": ".",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "sourceMap": true
   },
   "exclude": [
      "node_modules"
   ],
   "typeRoots": [
      "./node_modules/@types/"
   ],
   "include": [
      "./src/**/*.tsx",
      "./src/**/*.ts"
   ]
}